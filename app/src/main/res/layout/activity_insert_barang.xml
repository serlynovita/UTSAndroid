<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertBarang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">



        <ImageView
            android:id="@+id/gambar"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/addphoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/editNama"
            android:layout_below="@+id/gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nama Barang"
            android:layout_centerHorizontal="true"
            android:ems="10"/>

        <EditText
            android:id="@+id/editHarga"
            android:layout_below="@+id/editNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Harga"
            android:layout_centerHorizontal="true"
            android:ems="10"/>

        <EditText
            android:id="@+id/editBerat"
            android:layout_below="@+id/editHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Berat"
            android:layout_centerHorizontal="true"
            android:ems="10"/>

        <EditText
            android:id="@+id/editQuantity"
            android:layout_below="@+id/editBerat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:layout_centerHorizontal="true"
            android:ems="10"/>

        <EditText
            android:id="@+id/editKondisi"
            android:layout_below="@+id/editQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Kondisi"
            android:layout_centerHorizontal="true"
            android:ems="10"/>

        <EditText
            android:id="@+id/editInformasiProduk"
            android:layout_below="@+id/editKondisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Informasi Produk"
            android:layout_centerHorizontal="true"
            android:ems="10"/>

        <Button
        android:id="@+id/button1"
        android:layout_below="@+id/editInformasiProduk"
        android:layout_centerHorizontal="true"
        android:minWidth="160dp"
        android:text="Simpan Record"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button2"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Simpan List"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Kembali"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>